@model TinTucMoiNhat.Models.post

@{
    string smoothTitle = Config.smoothTitle(Model.message);
    ViewBag.Title = smoothTitle + "-" + Model.domain_name;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.url = "http://tintucmoinhat.vn/fanpost/bai-viet/" + Config.unicodeToNoMark(Model.domain_name) + "-" + Model.id;
}
@section metatags {
    <meta name="description" content="@Html.Raw(ViewBag.des)">
    <meta name="keywords" content="">
    <meta name="author" content="@Model.domain_name">
    <meta name="robots" content="index,follow,noodp">
    <meta property="fb:app_id" content="1930351307185969" />
    <meta property="og:locale" content="vi_VN">
    <meta property="og:type" content="facebook post">
    <meta property="og:url" content="@ViewBag.url">
    <meta property="og:title" content="@Html.Raw(ViewBag.Title)">
    <meta property="og:description" content="@Html.Raw(ViewBag.des)">
    <meta property="og:image" itemprop="thumbnailUrl" content="@HttpUtility.UrlDecode(@Model.image)">
}
<style>
    /*img {
